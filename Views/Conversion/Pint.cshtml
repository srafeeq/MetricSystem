@{
    ViewData["Title"] = "Pint Conversion";
}

<h2 class="text-center text-primary mb-4">Pint to Liter</h2>

<div class="container">
    <form asp-action="Pint" method="post">
        <div class="mb-3">
            <label for="pint" class="form-label">Enter Pints</label>
            <input type="number" id="pint" name="pint" class="form-control" placeholder="Enter Pint value" />
        </div>

        <button type="submit" class="btn btn-primary me-2">Convert</button>
        <button type="reset" class="btn btn-outline-secondary">Clear</button>
    </form>

    @if (ViewBag.Result != null)
    {
        <div class="alert alert-success mt-3">@ViewBag.Result</div>
    }
</div>
