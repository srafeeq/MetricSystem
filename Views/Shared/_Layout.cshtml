<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MetricSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">MetricSystem</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Conversion" asp-action="Fahrenheit">Fahrenheit</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Conversion" asp-action="Inch">Inch</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Conversion" asp-action="Pint">Pint</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Conversion" asp-action="Yard">Yard</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    </ul>
                </div>

                
                <div class="d-flex align-items-center ms-auto">
                    <a class="nav-link text-white d-flex align-items-center" asp-controller="Conversion" asp-action="Fahrenheit">
                        <i class="fa-solid fa-cart-shopping me-2"></i>
                        <span>Calculations</span>
                        <span class="badge bg-danger ms-2">3</span>
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container mt-4">
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
